@{
    Layout = "_LayoutMonitor";
    ViewData["Title"] = "Home Page";
}
<link href="~/css/home.index.css" rel="stylesheet" />

<div class="d-flex justify-content-center">

    <div class="card my-card">
        <div class="card-header my-card-header">
            Số lượng App đang chạy
        </div>
        <div class="card-body">
            <div id="countAppDangChay" class="my-count">0</div>
        </div>
    </div>

    <div class="card my-card">
        <div class="card-header my-card-header">
            Số lượng người đang chơi
        </div>
        <div class="card-body">
            <div id="countNguoiDangChoi" class="my-count">0</div>
        </div>
    </div>

    <div class="card my-card">
        <div class="card-header my-card-header">
            Số lượng điện thoại
        </div>
        <div class="card-body">
            <div id="countDienThoai" class="my-count">0</div>
        </div>
    </div>

</div>

<div class="d-flex justify-content-center my-loading">
    <div class="spinner-border text-primary" role="status">
        <span class="visually-hidden">Loading...</span>
    </div>
    <div class="ps-2 my-loading-message">
        Đang kết nối...
    </div>
</div>

@section Scripts {
    <script src="~/lib/signalr/signalr.min.js"></script>
    <script src="~/js/home.index.js"></script>
}